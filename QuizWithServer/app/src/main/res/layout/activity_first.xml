<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:gravity="center"
            android:text="@string/accueil"
            android:textSize="36sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgPresentation"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:srcCompat="@drawable/presentation"
                android:onClick="FRA_langage" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/lang_FRA"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/fra"
                android:onClick="FRA_langage" />

            <ImageView
                android:id="@+id/lang_ESP"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/esp"
                android:onClick="ESP_langage" />

            <ImageView
                android:id="@+id/lang_ANG"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ang"
                android:onClick="ANG_langage" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>